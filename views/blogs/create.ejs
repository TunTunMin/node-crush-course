<body>
    <%- include('../partials/nav.ejs') %>

   <div class="blogs content create-blog">
    <h2>Create Blog</h2>
    <form action="/blogs" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control">
        </div>
